# ==================== 환경 설정 ====================
ENV=development
DEBUG=false
LOG_LEVEL=INFO

# ==================== API 설정 ====================
API_TITLE=CureMate STT/Summary API
API_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# ==================== Redis 설정 ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # 비밀번호가 있으면 설정

# ==================== 데이터베이스 설정 (MariaDB) ====================
# ⚠️ 주의: Docker 컨테이너에서 외부 DB 접속 시 호스트 IP 사용
DB_TYPE=mariadb
DB_HOST=210.116.103.144
DB_PORT=3306
DB_NAME=curemate
DB_USER=uds
DB_PASSWORD=275506%)
DB_CHARSET=utf8mb4

# 연결 풀 설정
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=False

# ==================== STT 엔진 선택 ====================
# faster-whisper: 기존 방식 (안정적, 검증됨)
# whisperlivekit: 새로운 방식 (빠름, 실험적)
STT_ENGINE=faster-whisper

# ==================== STT 공통 설정 ====================
STT_MODEL_SIZE=small
STT_DEVICE_TYPE=cpu
STT_LANGUAGE=ko

# ==================== faster-whisper 전용 설정 ====================
STT_BEAM_SIZE=1
STT_COMPUTE_TYPE=int8

# ==================== WhisperLiveKit 전용 설정 ====================
WHISPERLIVE_USE_DIARIZATION=false

# ==================== HuggingFace 설정 (선택사항) ====================
# Whisper 모델 다운로드 시 HuggingFace 토큰이 필요한 경우만 설정
# 대부분의 경우 불필요 (공개 모델은 토큰 없이 다운로드 가능)
# HF_TOKEN=your_huggingface_token_here

# ==================== LLM 설정 ====================
# LLM 프로바이더 선택: ollama 또는 lmstudio
LLM_PROVIDER=ollama

# LM Studio 설정
LMSTUDIO_BASE_URL=http://host.docker.internal:1234/v1
LMSTUDIO_TIMEOUT=120.0

# Ollama 설정
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL_NAME=gemma3
OLLAMA_TIMEOUT=300.0

# ==================== 파일 설정 ====================
TEMP_AUDIO_DIR=temp_audio
MAX_FILE_SIZE=104857600  # 100MB in bytes


